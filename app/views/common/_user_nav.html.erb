  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <%= current_user.email %> <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li> <%= link_to("Logout", destroy_user_session_path) %> </li>
    </ul>
